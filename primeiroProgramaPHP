<?php

class Pessoa{
	
	public $nome;
	public $site;
	
		
	public function falarNome(){
		echo $this->nome;
			
	}	
	public function falaSite(){
		
		echo $this->site;
	
	}	
	
}	
	$uma_pessoa=new Pessoa;
	$uma_pessoa->nome="Willian"; // retorna nome porem nao é recomendado no php
	$uma_pessoa->site="www.labinf.com.br";	// retorna site nao é uma boa pratica
	$uma_pessoa->falarNome();  //retorna o nome
	



